<?xml version="1.0" encoding="UTF-8"?>
<project name="module_java_code_generator" default="compile.module.java_code_generator">
  <dirname property="module.java_code_generator.basedir" file="${ant.file.module_java_code_generator}"/>
  
  <property name="module.jdk.home.java_code_generator" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.java_code_generator" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.java_code_generator" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.java_code_generator" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="java_code_generator.output.dir" value="${module.java_code_generator.basedir}/out/production/java_code_generator"/>
  <property name="java_code_generator.testoutput.dir" value="${module.java_code_generator.basedir}/out/test/java_code_generator"/>
  
  <path id="java_code_generator.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="java_code_generator.module.production.classpath">
    <path refid="${module.jdk.classpath.java_code_generator}"/>
    <path refid="library.sketch-frontend.classpath"/>
  </path>
  
  <path id="java_code_generator.runtime.production.module.classpath">
    <pathelement location="${java_code_generator.output.dir}"/>
  </path>
  
  <path id="java_code_generator.module.classpath">
    <path refid="${module.jdk.classpath.java_code_generator}"/>
    <pathelement location="${java_code_generator.output.dir}"/>
    <path refid="library.sketch-frontend.classpath"/>
  </path>
  
  <path id="java_code_generator.runtime.module.classpath">
    <pathelement location="${java_code_generator.testoutput.dir}"/>
    <pathelement location="${java_code_generator.output.dir}"/>
    <path refid="library.sketch-frontend.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.java_code_generator">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.java_code_generator">
    <patternset refid="excluded.from.module.java_code_generator"/>
  </patternset>
  
  <path id="java_code_generator.module.sourcepath">
    <dirset dir="${module.java_code_generator.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.java_code_generator" depends="compile.module.java_code_generator.production,compile.module.java_code_generator.tests" description="Compile module java_code_generator"/>
  
  <target name="compile.module.java_code_generator.production" depends="register.custom.compilers" description="Compile module java_code_generator; production classes">
    <mkdir dir="${java_code_generator.output.dir}"/>
    <javac2 destdir="${java_code_generator.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.java_code_generator}/javac">
      <compilerarg line="${compiler.args.java_code_generator}"/>
      <bootclasspath refid="java_code_generator.module.bootclasspath"/>
      <classpath refid="java_code_generator.module.production.classpath"/>
      <src refid="java_code_generator.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.java_code_generator"/>
    </javac2>
    
    <copy todir="${java_code_generator.output.dir}">
      <fileset dir="${module.java_code_generator.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.java_code_generator.tests" depends="register.custom.compilers,compile.module.java_code_generator.production" description="compile module java_code_generator; test classes" unless="skip.tests"/>
  
  <target name="clean.module.java_code_generator" description="cleanup module">
    <delete dir="${java_code_generator.output.dir}"/>
    <delete dir="${java_code_generator.testoutput.dir}"/>
  </target>
</project>